<?xml version="1.0" encoding="utf-8"?>

<resources>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>


  <style name="MyTheme.Splash" parent ="MyTheme.Base">
    <!--<item name="android:windowBackground">@drawable/splash_screen</item>-->
    <item name="android:windowNoTitle">true</item>
  </style>

  
  <!-- Base theme applied no matter what API -->
  <style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/primary</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">@color/accent</item>

    <item name="colorControlNormal">@color/ltyellow</item>
    <item name="colorControlActivated">@color/accent_pressed</item>
    <item name="colorControlHighlight">@color/ripple</item>
    <item name="colorSwitchThumbNormal">@color/primary</item>

    <!-- Option to hide the drop shadow here

      <item name="actionBarStyle">@style/MyTheme.ActionBar</item>
      <item name="android:windowContentOverlay">@null</item>
    -->

    <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    <item name="android:checkboxStyle">@style/CheckBoxMyTheme</item>
  </style>
  <style name="MyTheme.ActionBar" parent="style/Widget.AppCompat.Light.ActionBar.Solid">
    <!-- remove shadow below action bar -->
    <!-- <item name="android:elevation">0dp</item> -->
    <!-- Support library compatibility -->
    <item name="elevation">0dp</item>
  </style>
  
  <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    <item name="android:textColor">@color/ltyellow</item>
    <item name="android:textSize">13dp</item>
  </style>

  <style name="CheckBoxMyTheme" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/checkbox_theme</item>
    <item name="android:textColor">@color/white</item>
  </style>
</resources>